{
  "name": "pica-texteditor",
  "version": "0.1.0",
  "description": "Functional Reactive Rich Text Editor",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/ test/ -c config/eslint.config.json",
    "coverage": "nyc --reporter=lcov npm test",
    "test": "npm run lint && npm run mocha",
    "mocha": "mocha --compilers js:babel-register -r test/spec.helper.js 'test/!(driver)/**/*.spec.js'",
    "karma": "./node_modules/karma/bin/karma start config/karma.config.js",
    "dist": "npm run dist:js && npm run dist:css",
    "dist:js": "browserify src/index.js -t babelify --standalone Pica -o dist/pica.js",
    "postdist:js": "uglifyjs dist/pica.js -o dist/pica.min.js",
    "dist:css": "node-sass --include-path src/style src/style/style.scss dist/pica.css",
    "postdist:css": "node-sass --include-path src/style src/style/style.scss --output-style compressed dist/pica.min.css"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-__coverage__": "^1.11.111",
    "babel-plugin-transform-es2015-modules-umd": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.4",
    "chai-increasing": "^1.2.0",
    "chai-virtual-dom": "^1.0.0",
    "eslint": "^2.11.0",
    "jquery": "^2.2.1",
    "karma": "^0.13.22",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lodash": "^4.13.1",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "nyc": "^6.4.4",
    "phantomjs-prebuilt": "^2.1.7",
    "q": "^1.4.1",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "snabbdom-chai": "^1.0.2",
    "uglify-js": "^2.7.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "@cycle/dom": "^12.2.3",
    "@cycle/xstream-run": "^3.1.0",
    "immutable": "^3.7.6",
    "lodash.clamp": "^4.0.2",
    "lodash.isfinite": "^3.3.1",
    "lodash.isnumber": "^3.0.3",
    "lodash.range": "^3.1.5",
    "xstream": "^5.2.1"
  },
  "author": "James Lawson",
  "license": "MIT"
}
